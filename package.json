{
  "name": "simorgh",
  "version": "0.0.1",
  "description": "Simorgh",
  "main": "index.js",
  "scripts": {
    "amp:validate": "wait-on http://localhost:7080/ && (amphtml-validator http://localhost:7080/article/amp/scenario-25 || true)",
    "bbcA11y": "bbc-a11y",
    "build": "razzle build",
    "cypress": "cypress run",
    "cypress:interactive": "cypress open",
    "cypress:storybook": "cypress run --project ./.storybook/.",
    "cypress:storybook:interactive": "cypress open --project ./.storybook/.",
    "dataValidate": "node src/app/dataValidator/index.js",
    "dataValidate:debug": "npm run dataValidate --DEBUG_MODE=true",
    "dev": "razzle start",
    "killApp": "(lsof -t -i:7080 | xargs kill)",
    "killStorybook": "(lsof -t -i:9001 | xargs kill)",
    "lighthouse": "lighthouse http://localhost:7080/article/scenario-01 --output-path=./reports/report.html --view",
    "postmerge": "./scripts/dependencyUpdateCheck.sh",
    "precommit": "npm run test:lint",
    "prepush": "./scripts/upToDateWithLatest.sh && npm run test:unit",
    "speculate": "speculate",
    "start": "NODE_ENV=production node build/server.js",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "npm run test:lint && npm run test:unit && npm run dataValidate",
    "test:accessibility": "npm run killApp && npm run build && run-p --race start bbcA11y",
    "test:accessibility:ci": "npm run build && run-p --race start bbcA11y",
    "test:ampValidate": "npm run killApp && npm run build && run-p --race start amp:validate",
    "test:e2e": "npm run killApp && npm run build && run-p --race start cypress",
    "test:e2e:ci": "npm run build && run-p --race start cypress",
    "test:a11y+lighthouse": "wait-on http://localhost:7080/ &&  A11Y_CONFIG=simorgh/simorgh npm --prefix ./node_modules/@bbc/a11y-tests-web run start:bbc-a11y:headless",
    "test:a11y+lighthouse:ci": "npm run killApp && npm run build && run-p --race start test:a11y+lighthouse",
    "test:e2e:interactive": "npm run killApp && npm run build && run-p --race start cypress:interactive",
    "test:e2e:storybook": "npm run killStorybook && run-p --race storybook cypress:storybook",
    "test:e2e:storybook:ci": "run-p --race storybook cypress:storybook",
    "test:e2e:storybook:interactive": "npm run killStorybook && run-p --race storybook cypress:storybook:interactive",
    "test:lighthouse": "npm run killApp && npm run build && run-p --race start lighthouse",
    "test:lint": "eslint --ext .js,jsx,json ./src ./data ./cypress ./.storybook && swagger-cli validate data/schema.yaml",
    "test:unit": "razzle test --env=jsdom --coverage",
    "updateSnapshots": "npm run test:unit -- -u"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbc/simorgh.git"
  },
  "keywords": [
    "BBC",
    "Article"
  ],
  "author": "BBC",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/bbc/simorgh/issues"
  },
  "homepage": "https://github.com/bbc/simorgh#readme",
  "dependencies": {
    "@bbc/a11y-tests-web": "github:radiocontrolled/a11y-tests-web",
    "@jaredpalmer/after": "^1.3.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "es6-promise": "^4.2.4",
    "express": "^4.16.3",
    "isomorphic-fetch": "^2.2.1",
    "markdown-to-jsx": "^6.7.0",
    "prop-types": "^15.6.2",
    "razzle": "^2.4.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-helmet": "^5.2.0",
    "react-router-dom": "^4.3.1",
    "speculate": "^1.7.4",
    "styled-components": "^3.4.2",
    "styled-normalize": "^8.0.0",
    "wait-on": "^2.1.0"
  },
  "devDependencies": {
    "@storybook/react": "4.0.0-alpha.8",
    "amphtml-validator": "^1.0.23",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.4",
    "bbc-a11y": "^2.2.1",
    "cypress": "^3.0.3",
    "eslint": "^5.2.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-json": "^1.2.1",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^2.6.1",
    "husky": "^0.14.3",
    "jest-fetch-mock": "^1.6.5",
    "jest-styled-components": "^5.0.1",
    "lighthouse": "^3.0.3",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.0",
    "react-test-renderer": "^16.4.2",
    "supertest": "^3.1.0",
    "swagger-cli": "^2.1.1",
    "webpack-bundle-analyzer": "^2.13.1",
    "yaml-js": "^0.2.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/src/**/*.{js,jsx}",
      "!**/src/app/helpers/tests/**",
      "!**/*.stories.jsx"
    ],
    "setupFiles": [
      "./src/app/helpers/tests/jest-setup.js"
    ]
  }
}
