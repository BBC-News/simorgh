{
  "name": "simorgh",
  "version": "0.0.1",
  "description": "Simorgh",
  "main": "index.js",
  "scripts": {
    "dev": "razzle start",
    "build": "razzle build",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "eslint --ext .js,jsx,json ./src ./data ./cypress ./.storybook",
    "test:unit": "razzle test --env=jsdom --coverage",
    "start": "NODE_ENV=production node build/server.js",
    "speculate": "speculate",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "cypress": "npx cypress run",
    "cypress:interactive": "npx cypress open",
    "test:e2e": "(lsof -t -i:7080 | xargs kill) && npm run build && run-p --race start cypress",
    "test:e2e:ci": "npm run build && run-p --race start cypress",
    "test:e2e:interactive": "(lsof -t -i:7080 | xargs kill) && npm run build && run-p --race start cypress:interactive",
    "test:storybook": "npx cypress run --project ./.storybook/",
    "lighthouse": "lighthouse http://localhost:7080/ --output-path=./reports/report.html --view"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbc/simorgh.git"
  },
  "keywords": [
    "BBC",
    "Article"
  ],
  "author": "BBC",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/bbc/simorgh/issues"
  },
  "homepage": "https://github.com/bbc/simorgh#readme",
  "dependencies": {
    "@jaredpalmer/after": "^1.3.1",
    "es6-promise": "^4.2.4",
    "express": "^4.16.3",
    "isomorphic-fetch": "^2.2.1",
    "prop-types": "^15.6.1",
    "razzle": "^2.0.3",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-helmet": "^5.2.0",
    "react-router-dom": "^4.2.2",
    "react-test-renderer": "^16.4.0",
    "speculate": "^1.7.4",
    "styled-components": "^3.3.2"
  },
  "devDependencies": {
    "@storybook/react": "^4.0.0-alpha.8",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "jest-fetch-mock": "^1.6.2",
    "lighthouse": "^2.9.4",
    "npm-run-all": "^4.1.3",
    "prettier": "1.13.5",
    "supertest": "^3.1.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/src/**/*.{js,jsx}",
      "!**/src/__test__/**",
      "!**/*.stories.jsx"
    ],
    "setupFiles": [
      "./src/__test__/jest-setup.js"
    ]
  }
}
